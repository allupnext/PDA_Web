@model IEnumerable<PDAEstimator_Domain.Entities.State>
<style>
    table td {
        width: 110px;
        word-wrap: break-word;
    }
</style>
<table class="table table-bordered table-striped" id="StateNameTable">
    <thead>
        <tr>
@*            @Html.HiddenFor(model => model.CountryId)
*@            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StateName)
                </td>

                <td>

                    <a class="btn btn-info btn-sm" onclick="editState(@item.ID)">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" onclick="deleteState(@item.ID)">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
