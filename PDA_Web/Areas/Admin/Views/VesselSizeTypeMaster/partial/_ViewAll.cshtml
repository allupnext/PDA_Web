@using PDAEstimator_Domain.Entities
@model IEnumerable<PDAEstimator_Domain.Entities.VesselSizeTypeMaster>
<style>
    table td {
        width: 110px;
        word-wrap: break-word;
    }
</style>
<table class="table table-bordered table-striped" id="VesselSizeTypeMaster">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VesselSizeTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DWT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GRT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NRT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LOA)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.Beam)
			</th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VesselSizeTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DWT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GRT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NRT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LOA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beam)
                </td>
                <td>
                    <a class="btn btn-info btn-sm" onclick="edit(@item.VesselSizeTypeId)">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" onclick="deleteRecord(@item.VesselSizeTypeId)">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
